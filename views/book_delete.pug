extends layout

block content

  h1 #{title}: #{book.title}

  if bookinstance_list.length

    p #[strong Delete the following instances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each book in bookinstance_list
          dt
            a(href=book.url) #{book.imprint}
          dd #{book.status}

  else
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete